extends ../layout/index

block contenido

  div
    h1.text-center.text-4xl.font-extrabold.my-10 Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold= pagina

    if errores
      div(class="max-w-md mx-auto my-5")
        each error in errores
          p.bg-red-700.text-center.p-2.text-white.uppercase.mb-1.font-bold= error.msg

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-4(method="POST" action="/auth/olvidepassword" noValidate)
          input(type="hidden" name="_csrf" value= csrfToken)
          div
            label.block.uppercase.text-sm.text-gray-500.font-bold.mb-2(for="email") Email
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
          div.flex.justify-between.items-center
            a(href="/auth/register" class="text-gray-500 text-xs") No tienes cuenta? Crea una
            a(href="/auth/login" class="text-gray-500 text-xs") Ya tienes cuenta? Inicia sesion
          input(class="w-full bg-indigo-600 rounded text-white hover:bg-indigo-700 font-bold py-3 cursor-pointer" type="submit" value="Recuperar Password")