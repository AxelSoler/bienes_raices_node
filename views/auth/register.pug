extends ../layout/index

block contenido

  div
    h1.text-center.text-4xl.font-extrabold.my-6 Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold= pagina

    if errores
      div(class="max-w-md mx-auto my-5")
        each error in errores
          p.bg-red-700.text-center.p-2.text-white.uppercase.mb-1.font-bold= error.msg

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-2(method="POST" action="register" noValidate)
          input(type="hidden" name="_csrf" value= csrfToken)
          div
            label.block.uppercase.text-sm.text-gray-500.font-bold.mb-2(for="nombre") tu nombre
            input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : "")
          div
            label.block.uppercase.text-sm.text-gray-500.font-bold.mb-2(for="email") Email
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded.placeholder-gray-400(placeholder="Tu Email" type="email" name="email" value= usuario ? usuario.email : "")
          div
            label.block.uppercase.text-sm.text-gray-500.font-bold.mb-2(for="password") Password
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
          div
            label.block.uppercase.text-sm.text-gray-500.font-bold.mb-2(for="repeat_password") Repetir Password
            input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded.placeholder-gray-400(placeholder="Repetir Password" type="password" name="repeat_password")
          div.flex.justify-between.items-center
            a(href="/auth/login" class="text-gray-500 text-xs") Ya tienes cuenta? Inicia sesion
            a(href="/auth/olvidepassword" class="text-gray-500 text-xs") Olvide mi password
          input(class="w-full bg-indigo-600 rounded text-white hover:bg-indigo-700 font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")