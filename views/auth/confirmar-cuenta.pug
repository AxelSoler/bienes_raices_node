extends ../layout/index

block contenido

  div
    h1.text-center.text-4xl.font-extrabold.my-10 Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold= pagina

  div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
    p(class= error ? "bg-red-500" : "bg-green-500").text-center.text-xl.font-bold.my-10.w-full.py-2.px-5.rounded-lg.text-white.uppercase= mensaje

  if !error
    a(href="/auth/login" class="text-center font-bold text-sm text-slate-600 mt-10 uppercase block mx-auto w-full") Ya puedes iniciar sesion 